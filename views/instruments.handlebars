<section>
    <h3 class="heading">{{family_name}}</h3>
    <section class="flex-row justify-center">
        {{#each instruments}}
        <section class="card">
            <div class="card-body">
                <a href="/instrument/{{id}}"><img src="{{image}}"></a>
                <p class="bold">{{instrument_name}}</p>
                <p class="bold">$ {{price}}</p>
                <p>Sold by: {{user.username}}</p>
            </div>
        </section>
        {{/each}}
    </section>
</section>